QTabWidget::pane {
    border-top: 1.5px solid #4d3b88;

}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background: #404040;
    color: #dfdfdf;
    /* font-weight: bold; */
    border-top-left-radius: 10px;
    border-top-right-radius: 1px;
    padding: 10px;
    min-width: 8ex;
}

QTabBar::tab:selected, QTabBar::tab:hover {
    background: #4d3b88;
}
