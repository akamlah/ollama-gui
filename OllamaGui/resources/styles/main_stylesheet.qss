}

/* mute labels */
QLabel[objectName^="UrlInstancelabel"]
, QLabel[objectName^="ShortctuLabel"]
, QLabel[objectName^="WordStreamExplanationLabel"]
, QLabel[objectName^="InfoLabel2"]
